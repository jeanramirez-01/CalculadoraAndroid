<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CALCULADORAPRO" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.CALCULADORAPRO" parent="Base.Theme.CALCULADORAPRO" />
    <style name="NumberButton">
        <item name="android:layout_margin">@dimen/_5dp</item>
        <item name="android:textSize">@dimen/_25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Operation">
        <item name="android:layout_margin">@dimen/_5dp</item>
        <item name="android:textSize">@dimen/_25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="TextView">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_margin">@dimen/_5dp</item>
        <item name="android:textSize">@dimen/_45sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:gravity">center</item>
    </style>
</resources>